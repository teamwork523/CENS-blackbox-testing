<?xml version="1.0" encoding="UTF-8"?>
<campaign>
  <campaignUrn>urn:campaign:ca:ucla:Mobilize:July:2011:Drink</campaignUrn>
  <campaignName>Drink</campaignName>
  <serverUrl>https://dev.mobilizingcs.org/</serverUrl>
  
  <surveys>

    <survey>
      <id>DrinkHabit</id>
      <title>Drink Habit</title>
      <description>Observe and collect drink pattern</description>
      <submitText>Drink pattern</submitText>
      <showSummary>false</showSummary>
      <editSummary>false</editSummary>
      <summaryText>Provide health advises based on people's drinking habit</summaryText>
      <anytime>true</anytime>
    
      <contentList>

        <prompt>
          <id>DrinkType</id>
          <displayType>event</displayType>
          <displayLabel>Drink</displayLabel>
	        <unit>Cup</unit>
          <promptText>What did you drink so far today?</promptText>
          <abbreviatedText>What did you drink so far today?</abbreviatedText>
          <promptType>multi_choice</promptType>
          <properties>
            <property>
              <key>0</key>
              <label>Water</label>
            </property>
            <property>
              <key>1</key>
              <label>Coffee</label>
            </property>
            <property>
              <key>2</key>
              <label>Tea</label>
            </property>
            <property>
              <key>3</key>
              <label>Soda</label>
            </property>
            <property>
              <key>4</key>
              <label>Juice</label>
            </property>
            <property>
              <key>5</key>
              <label>Alcohol</label>
            </property>
            <property>
              <key>6</key>
              <label>Energy Drink</label>
            </property>
            <property>
              <key>7</key>
              <label>Others</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>
      </contentList>
      
    </survey>
  </surveys>
</campaign>
